<div class="card">
    <div class="card-body">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" value="<%= article.title %>" name="title" id="title" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
        </div>

        <div class="form-group">
            <label for="markdown">Markdown</label>
            <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
        </div>
    </div>
</div>

<div class="card-footer">
    <a href="/articles/<%= article.slug %>" class="btn btn-outline-secondary">Cancel</a>
    <button type="submit" class="btn btn-success">Save</button>
</div>
