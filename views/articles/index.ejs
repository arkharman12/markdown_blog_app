<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <!-- Font Awesome CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
    <link rel="stylesheet" href="../../css/styles.css">
    <title>Blog App</title>
</head>
<body>
    <div class="container">
        <br>
        <h1 class="mb-4 text-center title"><span class="badge badge-dark">Blog Articles</span></h1>
        <a href="/articles/new" class="btn btn-success">Add new article <i class="fas fa-plus-circle"></i></a>

        <% articles.forEach(article => { %>
            <div class="card mt-4">
                <h4 class="card-header"><%= article.title %></h4>
                <div class="card-body">
                    <div class="card-subtitle text-muted mb-2"><%= article.createdAt.toLocaleDateString() %></div>
                    <div class="card-text mb-4"><%= article.description %></div>
                    <a href="articles/<%= article.slug %>" class="btn btn-outline-primary">Read more</a>
                    <!-- <a href="articles/edit/<%= article.id %>" class="btn btn-outline-warning">Edit</a> -->
                    <!-- <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form> -->
                </div>
            </div>
        <% }) %>
        
    </div>
</body>
</html>